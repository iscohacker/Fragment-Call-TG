<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.ActionFragment">

    <TextView
        android:id="@+id/numner_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Telefon raqam"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#89FF00"
        android:gravity="center"
        android:text="Qo'ng'iroq qilish"
        android:textColor="@color/black"
        app:cornerRadius="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_telegram"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:backgroundTint="#89FF00"
        android:gravity="center"
        android:text="Telegramdan bog'lanish"
        android:textColor="@color/black"
        app:cornerRadius="5dp" />

</LinearLayout>